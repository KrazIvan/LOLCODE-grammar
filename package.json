{
  "name": "lolcode-grammar-vscode",
  "displayName": "LOLCODE Syntax",
  "publisher": "IvanShabalin",
  "description": "Syntax highlighter for the LOLCODE language in Visual Studio Code!",
  "version": "1.0.0",
  "license": "MIT",
	"icon": "assets/images/logo.png",
	"repository": {
    "type": "git",
    "url": "https://github.com/KrazIvan/LOLCODE-grammar-vscode"
	},
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [{
      "id": "lolcode",
      "aliases": ["LOLCODE", "lolcode", "LOLCode", "LolCode"],
      "extensions": [".lol",".lols"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "lolcode",
      "scopeName": "source.lolcode",
      "path": "./syntaxes/lolcode.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "ts-loader": "^9.4.2",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "@vscode/test-electron": "^2.3.0"
  }
}
